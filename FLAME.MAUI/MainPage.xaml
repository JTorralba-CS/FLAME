<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FLAME.MAUI.MainPage">

    <Grid RowDefinitions="48,*,48" ColumnDefinitions="48,*,48">

        <Image Grid.Column="0" Grid.Row="0" BackgroundColor="Black" Source="menu.png" WidthRequest="48" HeightRequest="48"/>
        <Label Grid.Column="1" Grid.Row="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" IsVisible="True" BackgroundColor="Black" TextColor="White" FontSize="Medium"  FontAttributes="None" Text="FLAME"/>
        <Image Grid.Column="2" Grid.Row="0" BackgroundColor="Black" Source="setting.png" WidthRequest="48" HeightRequest="48"/>

        <ScrollView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
        <VerticalStackLayout VerticalOptions="Center">

            <Frame
                HorizontalOptions="Center"
                VerticalOptions="Center"
                CornerRadius="8"
                Padding="0,0,0,0">

                <Image
                    Source="logo.png"
                    WidthRequest="120"
                    HeightRequest="120"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

        <Image Grid.Column="0" Grid.Row="2" BackgroundColor="Black" Source="left.png" WidthRequest="48" HeightRequest="48"/>
        <Label Grid.Column="1" Grid.Row="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" IsVisible="True" BackgroundColor="Black" TextColor="{StaticResource G3}" FontSize="Small"  FontAttributes="None" Text="© 2023 FLAME Solutions"/>
        <Image Grid.Column="2" Grid.Row="2" BackgroundColor="Black" Source="right.png" WidthRequest="48" HeightRequest="48"/>

    </Grid>

</ContentPage>
